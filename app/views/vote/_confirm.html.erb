<div class="container confirm" style="width: 18rem;">
    <div class="h5 navtitle">Confirma tu voto</div>
    <div class="row">
        <div class="col-sm-4 p-2 m-2">
            <div class="h5 navlinks"><%= @vote1 %></div>
            <%= image_tag(@pic1, class: "img-fluid img-thumbnail p-1 rounded") %>
        </div>
        <div class="col-sm-4 p-2 m-2">
            <div class="h5 navlinks"><%= @vote2 %></div>
            <%= image_tag(@pic2, class: "img-fluid img-thumbnail p-1 rounded") %>    
        </div>
    </div>
    <div class="row">
        <div class="btn btn-success m-2" onclick="confirmVote(true)"> Confirmar </div>
        <div class="btn btn-danger m-2" onclick="confirmVote(false)"> Cancelar </div>
    </div>
</div>
<script>
    $(".initVote").fadeOut("slow", ()=>{
		$(".confirm").fadeIn("slow")
	})
    confirmVote = function(data) {
        $.post("vote/confirm",{accept: data});
    }
</script>