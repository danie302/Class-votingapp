<div class="registerMain">
    <div class="card">
        <div class="card-header text-center">
            Bievenido futuro partido
        </div>
        <div class="card-body">
            <h5 class="card-title text-center">Deja que tu partido sea parte de nuestro sistema</h5>
            <p class="card-text text-center">Llena el siguiente formulario para poder registrar a tus candidatos</p>
        </div>

        <%= form_for :politic_party, :method => "post",:url => { :action => :register }, :html => {:class => 'container text-center'} do |f| %>
            <p class="form-group">
                <%= f.label "Nombre de tu partido", nil, class: '' %><br>
                <%= f.text_field :name, placeholder: 'Nombre', class: 'form-control text-center' %>
            </p>
            <p>
                <%= f.submit "Registrar", class: 'btn btn-secondary text-center' %>
            </p>
            <div class="alert alert-success <%= @state == "save" ? "display" : "hidden" %>" role="alert">
                Partido registrado con exito
            </div>
            <div class="alert alert-warning <%= @state == "exist" ? "display" : "hidden" %>" role="alert">
                Partido ya existe
            </div>
            <div class="alert alert-danger <%= @state == "error" ? "display" : "hidden" %>" role="alert">
                Ah ocurrido un error
            </div>
        <% end %>
    </div>
</div>