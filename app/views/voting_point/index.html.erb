<div class="candidateMain">
	<div class="card">
		<div class="card-header text-center">
			Bienvenido
		</div>
		<div class="card-body">
			<h5 class="card-title text-center">Registra un nuevo punto de votación</h5>
			<p class="card-text text-center">Llena el formulario para registrar un nuevo punto de votación</p>
		</div>
		<%= form_for :voting_point, :method => "post",:url => { :action => :register }, :html => {:class => 'container text-center'} do |f| %>
			<div class="alert alert-warning <%= @state == "exist" ? "display" : "hidden" %>" role="alert">
				Punto de votación ya existe
			</div>
			<p class="form-group"> 
				<%= f.text_field :name, placeholder: 'Nombre', class: 'form-control text-center' %>
			</p>
			<p class="form-group">
				<%= f.text_field :address, placeholder: 'Dirección', class: 'form-control text-center' %>
			</p>
			<p class="form-group"> 
				<%= f.text_field :city, placeholder: 'Ciudad', class: 'form-control text-center' %>
			</p>
			<p class="form-group">
				<%= f.text_field :department, placeholder: 'Departamento', class: 'form-control text-center' %>
			</p>
			<p>
				<%= f.submit "Registrar punto de votación", class: 'btn btn-secondary text-center' %>
			</p>
		<% end %>
	</div>
</div>
