<div class="candidateMain">
    <div class="card">
        <div class="card-header text-center">
            Bienvenido futuro candidato
        </div>
        <div class="card-body">
            <h5 class="card-title text-center">Forma parte de nuestro sistema</h5>
            <p class="card-text text-center">Llena el siguiente formulario para ser parte de nuestro sistema y competir por el puesto</p>
        </div>

        <%= form_for :candidate, :method => "post",:url => { :action => :register }, :html => {:class => 'container text-center'} do |f| %>
            <div class="alert alert-warning <%= @state == "exist" ? "display" : "hidden" %>" role="alert">
                Candidato ya exite
            </div>
            <div class="alert alert-danger <%= @state == "PoliticPartyDontExist" ? "display" : "hidden" %>" role="alert">
                Partido politico no existe
            </div>
            <p class="form-group">
                <%= f.text_field :name, placeholder: 'Nombre', class: 'form-control text-center' %>
            </p>
            <p class="form-group">
                <%= f.text_field :last_name, placeholder: 'Apellido', class: 'form-control text-center' %>
            </p>
            <p class="form-group">
                <%= f.text_field :cc, placeholder: 'CC', class: 'form-control text-center' %>
            </p>
            <p class="form-group">
                <%= f.text_area :cv, placeholder: 'Descripción de hoja de vida', class: 'form-control text-center' %>
            </p>
            <p class="form-group">
                <%= f.text_field :city, placeholder: 'Ciudad', class: 'form-control text-center' %>
            </p>
            <p class="form-group">
                <%= f.text_field :department, placeholder: 'Departamento', class: 'form-control text-center' %>
            </p>
            <p class="form-group">
                <%= f.label "Cargo", nil, class: '' %><br>
                <%= f.select "position", options_for_select(["Selecciona tu cargo", "Alcaldia", "Gobernación" ]), class: 'form-control text-center' %>
            </p>
            <p class="form-group">
                <%= f.label "Partido", nil, class: '' %><br>
                <%= f.select "party", options_for_select(@parties_names), class: 'form-control text-center' %>
            </p>
            <p class="form-group">
                <%= f.label "Foto", nil, class: '' %><br>
                <%= f.file_field :picture, placeholder: 'Picture', class: 'form-control text-center' %>
            </p>
            <p class="form-group">
                <%= f.label "Plan de gobierno", nil, class: '' %><br>
                <%= f.file_field :gov_plan, class: 'form-control text-center' %>
            </p>
            <p>
                <%= f.submit "Registrate", class: 'btn btn-secondary text-center' %>
            </p>
        <% end %>
    </div>
</div>